                    "name": {
                      "type": "string",
                      "description": "User's full name"
                    },
                    "email": {
                      "type": "string",
                      "description": "User's email address"
                    },
                    "role": {
                      "type": "string",
                      "description": "User's role or access level"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
