    "/api/users/signup": {
      "post": {
        "summary": "Create an account",
        "tags": ["Authentication"],
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "mugishajoseph092@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "walmond@123"
                  },
                  "confirmPassword": {
                    "type": "string",
                    "example": "walmond@123"
                  },
                  "name": {
                    "type": "string",
                    "example": "mugisha"
                  }
                },
                "required": ["email", "password", "name"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "email": { "type": "string" },
                    "password": { "type": "string" },
                    "confirmPassword": { "type": "string" }
                  },
                  "required": ["name", "email", "password", "confirmPassword"]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
